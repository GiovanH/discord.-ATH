PROCREATE LOOP 1;
AGGREGATE [NULL, NULL]FILLER;
PROCREATE QUEUE FILLER;

~ATH(LOOP) {
	print ("Select action:\n");
	print ("[1] Add an item to queue\n");
	print ("[2] View queue\n");
	print ("[3] Exit\n");
	input CHOICE;
	
	WHEN (CHOICE == 3) {
		LOOP.DIE();
	} UNLESS (CHOICE == 2) {
		REPLICATE TEMP QUEUE;
		~ATH(TEMP !=! NULL) {
			BIFURCATE TEMP[HEAD, TEMP];
			print ("~s\n", HEAD);
		}
	} UNLESS (CHOICE == 1){
		input ITEM "Input string to add: ";
		BIFURCATE QUEUE[HEAD, TAIL];
		AGGREGATE [NEWITEM,TAIL]NEWITEM;
		AGGREGATE [HEAD, NEWITEM]QUEUE;
	} UNLESS {
		print ("Invalid input.");
	}
}
THIS.DIE();