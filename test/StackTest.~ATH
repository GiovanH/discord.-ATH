PROCREATE LOOP 1;
PROCREATE STACK NULL;

~ATH(LOOP) {
	print ("Select action:\n");
	print ("[1] Add an item to stack\n");
	print ("[2] View stack\n");
	print ("[3] Exit\n");
	input CHOICE;
	
	DEBATE (CHOICE == 3) {
		LOOP.DIE();
	} UNLESS (CHOICE == 2) {
		PROCREATE BLAH 0;
		REPLICATE TEMP STACK;
		~ATH(BLAH) {
			BIFURCATE TEMP[TEMP, TAIL];
			DEBATE (TEMP) {
				print ("~s\n", TAIL);
			} UNLESS {
				BLAH.DIE();
			}
		} EXECUTE(NULL);
	} UNLESS (CHOICE == 1) {
		input ITEM "Input string to add: ";
		AGGREGATE [STACK, ITEM]STACK;
	} UNLESS {
		print ("Invalid input.");
	}
} EXECUTE(NULL);
THIS.DIE();
